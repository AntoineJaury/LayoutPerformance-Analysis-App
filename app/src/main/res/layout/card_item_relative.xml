<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/title_image"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/title_image"
        android:layout_toRightOf="@+id/title_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:drawablePadding="6dp"
        android:drawableLeft="@android:drawable/checkbox_on_background"
        android:text="Medicine Name"
        android:textSize="14sp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@id/title"
        android:layout_toEndOf="@+id/title_image"
        android:layout_toRightOf="@+id/title_image"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Quantity Description"
        android:textSize="14sp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_image"
        android:layout_marginEnd="8dp"
        android:text="MRP"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/title_image"
        android:layout_toRightOf="@+id/title_image"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/title_image"
        android:layout_toEndOf="@+id/mrp"
        android:layout_toRightOf="@+id/mrp"
        android:text="Rs.735"/>

    <TextView
        android:id="@+id/add_to_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:layout_alignBottom="@id/title_image"
        android:layout_toEndOf="@+id/price"
        android:layout_alignParentEnd="true"
        android:gravity="end"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/price"
        android:text="ADD TO CART"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>